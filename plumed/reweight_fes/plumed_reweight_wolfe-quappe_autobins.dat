# vim:ft=plumed
UNITS NATURAL

p: READ FILE=colvar.data IGNORE_TIME VALUES=p.x,p.y
ves: READ FILE=colvar.data IGNORE_TIME VALUES=b1.bias

weights: REWEIGHT_BIAS TEMP=1 ARG=ves.bias

HISTOGRAM ...
  ARG=p.x,p.y
  GRID_MIN=-3,-3
  GRID_MAX=3,3
  GRID_BIN=300,300
  BANDWIDTH=0.05,0.05
  LOGWEIGHTS=weights
  LABEL=hist
... HISTOGRAM

DUMPGRID GRID=hist FILE=hist FMT=%24.16e

fes: CONVERT_TO_FES GRID=hist TEMP=1

DUMPGRID GRID=fes FILE=fes FMT=%24.16e
