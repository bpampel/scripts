# vim:ft=plumed

p: READ FILE=colvar.data IGNORE_TIME VALUES=p.x,p.y
metad: READ FILE=colvar.data IGNORE_TIME VALUES=metad.bias

weights: REWEIGHT_BIAS TEMP=1 ARG=metad.bias

HISTOGRAM ...
  ARG=p.x,p.y
  GRID_MIN=-3,-3
  GRID_MAX=3,3
  GRID_BIN=300,300
  BANDWIDTH=0.02,0.02
  LOGWEIGHTS=weights
  LABEL=hist
... HISTOGRAM

fes: CONVERT_TO_FES GRID=hist TEMP=1

DUMPGRID GRID=fes FILE=fes FMT=%24.16e
