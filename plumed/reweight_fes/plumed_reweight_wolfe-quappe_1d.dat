# vim:ft=plumed

p: READ FILE=colvar.data IGNORE_TIME VALUES=p.x
ves: READ FILE=colvar.data IGNORE_TIME VALUES=b1.bias

weights: REWEIGHT_BIAS TEMP=1 ARG=ves.bias

HISTOGRAM ...
  ARG=p.x
  GRID_MIN=-3
  GRID_MAX=3
  GRID_BIN=300
  BANDWIDTH=0.02
  LOGWEIGHTS=weights
  LABEL=hist
... HISTOGRAM

fes: CONVERT_TO_FES GRID=hist TEMP=1

DUMPGRID GRID=fes FILE=fes FMT=%24.16e
